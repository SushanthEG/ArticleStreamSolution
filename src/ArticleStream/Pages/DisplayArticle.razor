@page "/article/{id:int}"
@using ArticleStream.Model
@using ArticleStream.Service
@inject DisplayArticleService displayArticleService

<h3>Article Details</h3>

@if (Article == null)
{
    <p>Loading...</p>
}
else
{
    <div class="card">
        <div class="card-inner">
            <!-- Front Side -->
            <div class="card-front">
                <div class="card-header">
                    <h4>@Article.Title</h4>
                </div>
                <div class="card-body">
                    <img src="/images/image_@(Id).jpg" alt="Article Image" class="card-image" />
                </div>
                <div class="card-footer">
                    <p>@Article.FullText</p>
                </div>
                <div class="card-footer">
                    <p>@Article.Summary</p>
                </div>
            </div>
        </div>
    </div>
}
